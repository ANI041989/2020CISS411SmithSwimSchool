@model Project1.ViewModels.RoleAddUserRoleViewModel
<p>Pick a role for @Model.User.UserName</p>

<form asp-controller="Account" asp-action="AllUser" method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="@Model.User.UserName" type="hidden" />
    <label asp-for="Role"></label>
    <select asp-for="Role"
            asp-items="@Model.RoleList"></select>
    <br />
    <button type="submit">Assign Role</button>
</form>
<p>
    <a asp-controller="Account" asp-action="AllUser">
        Back to user list
    </a>
</p>