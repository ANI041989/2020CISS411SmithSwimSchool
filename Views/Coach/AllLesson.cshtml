@model IEnumerable<Project1.Models.Lesson>


@{
    if (Model.Count() < 1)
    {
        <p>No lessons in database yet.</p>
    }
    else
    {
        <h3>All Lessons</h3>
        <table border="1">
            <tr>
                <th>Lesson ID</th>
                <th>Skill Level</th>
                <th>Add Session</th>
            </tr>
            @foreach (var l in Model)
            {
                <tr>
                    <td>@l.LessonId</td>
                    <td>@l.SkillLevel</td>
                    <td><a asp-controller="Coach" asp-action="AddSession">Add Session</a></td>
                    
                </tr>
            }
        </table>
    }
}