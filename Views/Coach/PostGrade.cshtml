@model List<Project1.Models.Enrollment>
<h2>Post Progress Grades</h2>
<h3>Session: @Model[0].Session.SessionId</h3>

<form asp-controller="Coach" asp-action="PostGrade" method="post" >
    <table border="1">
        <tr>
            <th></th>
            <th>Swimmer Id</th>
            <th>Swimmer Name</th>
            <th>Grade</th>
        </tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td><input asp-for="@Model[i].EnrollmentId" type="hidden" value="@Model[i].EnrollmentId" /></td>
                <td>@Model[i].SwimmerId</td>
                <td><a asp-controller="Swimmer" asp-action="Profile" asp-route-id="@Model[i].Swimmer.SwimmerId"> @Model[i].Swimmer.SwimmerName</a></td>
                <td><input asp-for="@Model[i].LetterGrade" /></td>

            </tr>
        }
    </table>
    <input type="submit" value="Submit Grade" />
</form>
